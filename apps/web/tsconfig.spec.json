{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": ["jasmine"],
    "paths": {
      "@app/*": ["src/app/*"],
      "@core/*": ["src/app/core/*"],
      "@shared/*": ["src/app/shared/*"],
      "@features/*": ["src/app/features/*"],
      "@env/*": ["src/environments/*"],
      "@testing/*": ["src/testing/*"],
      "@capacitor/preferences": ["src/testing/capacitor-preferences.mock.ts"],
      "@capacitor/network": ["src/testing/capacitor-network.mock.ts"],
      "@app/core/db/database": ["src/testing/dexie.mock.ts"],
      "@erp/shared": ["../../packages/shared/src/index.ts"],
      "@erp/shared/*": ["../../packages/shared/src/*"]
    }
  },
  "include": ["src/**/*.spec.ts", "src/**/*.d.ts", "src/testing/**/*.ts"]
}
