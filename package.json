{
  "name": "erp-logistics",
  "version": "1.0.0",
  "description": "Logistics ERP PWA - Order Management System",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "api:dev": "pnpm --filter erp-logistics-api run start:dev",
    "api:build": "pnpm --filter erp-logistics-api run build",
    "api:start": "pnpm --filter erp-logistics-api run start:prod",
    "web:dev": "pnpm --filter web run start",
    "web:build": "pnpm --filter web run build",
    "mobile:dev": "pnpm --filter mobile run start",
    "mobile:build": "pnpm --filter mobile run build",
    "web:build:ghpages": "pnpm --filter web run build:ghpages",
    "mobile:build:ghpages": "pnpm --filter mobile run build:ghpages",
    "web:build:cloudflare": "pnpm --filter web run build:cloudflare",
    "mobile:build:cloudflare": "pnpm --filter mobile run build:cloudflare",
    "mobile:ios": "pnpm --filter mobile run cap:ios",
    "mobile:android": "pnpm --filter mobile run cap:android",
    "deploy:web:cf": "pnpm web:build:cloudflare && wrangler pages deploy apps/web/dist/web/browser --project-name=erp-web",
    "deploy:mobile:cf": "pnpm mobile:build:cloudflare && wrangler pages deploy apps/mobile/www/browser --project-name=erp-mobile",
    "db:generate": "pnpm --filter erp-logistics-api run prisma:generate",
    "db:migrate": "pnpm --filter erp-logistics-api run prisma:migrate",
    "db:seed": "pnpm --filter erp-logistics-api run prisma:seed",
    "db:studio": "pnpm --filter erp-logistics-api run prisma:studio",
    "test": "pnpm -r run test",
    "test:e2e": "pnpm -r run test:e2e",
    "test:e2e:open": "cypress open",
    "test:e2e:run": "cypress run --headless",
    "test:e2e:ci": "cypress run --headless --spec 'cypress/e2e/**/*.cy.ts'",
    "lint": "pnpm -r run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "pnpm -r exec rm -rf dist node_modules .turbo",
    "progress": "npx tsx scripts/progress.ts"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@playwright/test": "^1.57.0",
    "cypress": "^15.8.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "playwright": "^1.57.0",
    "prettier": "^3.4.2",
    "prisma": "^6.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.14.4",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@prisma/client": "^6.0.0",
    "argon2": "^0.41.0",
    "ionicons": "^8.0.13"
  }
}
